@model List<Book>

<h2 class="text-center mb-5">List of Books</h2>

<div class="row mb-5">
    <div class="col">
        <a class="btn btn-primary" asp-controller="Books" asp-action="Create">New Book</a>
    </div>
    <div class="col">
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Description</th>
            <th>Author</th>
            <th>Brand</th>
            <th>Category</th>
            <th>Price</th>
            <th>ImageFileName</th>
            <th>CreatedAt</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Id</td>
                <td>@book.Title</td>
                <td>@book.Description</td>
                <td>@book.Author</td>
                <td>@book.Brand</td>
                <td>@book.Category</td>
                <td>@(book.Price)$</td>
                <td><img src="/books/@book.ImageFileName" width="100" /></td>
                <td>@book.CreatedAt.ToString("MM/dd/yyyy")</td>
                <td style="white-space:nowrap">
                    <a class="btn btn-primary btn-sm" asp-controller="Books" asp-action="Edit"
                       asp-route-id="@book.Id">Edit</a>
                    <a class="btn btn-danger btn-sm" asp-controller="Books" asp-action="Delete"
                       asp-route-id="@book.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
